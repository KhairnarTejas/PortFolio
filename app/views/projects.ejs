  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body {
      background-color: #121212;
      color: #ffffff;
    }
    .card {
      transition: transform 0.2s;
      border: none;
    }
    .card:hover {
      transform: scale(1.05);
